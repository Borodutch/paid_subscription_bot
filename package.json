    "@typegoose/typegoose": "^7.6.1",
    "dotenv": "^10.0.0",
    "module-alias": "^2.2.2",
    "mongoose": "5.10.18",
    "telegraf": "^4.3.0",
    "telegraf-i18n": "^6.6.0",
    "typescript": "^4.3.2"
  },
  "_moduleAliases": {
    "@": "dist"
  }
}
