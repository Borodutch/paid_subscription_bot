    "watch-ts": "tsc -w --skipLibCheck",
    "watch-js": "nodemon dist/app.js"
  },
  "devDependencies": {
    "@types/mongoose": "^5.10.18",
    "@types/node": "^15.12.1",
    "concurrently": "^6.2.0",
